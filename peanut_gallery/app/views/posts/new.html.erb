<%= form_for @post, url: {action: "create"}, html: {class: ""} do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title %><br />

  <%= f.label :content %>:
  <%= f.text_area :content, size: "60x12" %><br />

   <%= f.label :category %>:
  <%= f.select(:category, options_for_select([['Economy', 1],['Environment', 2],['Politics', 3],['Social Values', 4],['Education', 5],['Religion', 6],['Health', 7],['Foreign Policy', 8],['Military', 9],['Technology', 10]])) %><br />

  <%= f.label :"response requests"%>:
  <%= f.text_area :requests_for_responses, size: "60x8" %><br />

   <%= f.label :"additional resources" %>:
  <%= f.text_area :additional_resources, size: "60x8" %><br />

  <%= f.submit "Create Post"%>
<% end %>
<% if !@posts.empty? %>
	<% @posts.each do |post| %>
		<div class="post">
				<h2 class="post-title"><a href="/posts/<%=post.id%>"><%= post.title %></a></h2>
				<p class="post-body"><%= post.content %></p>
				<p class="post-request-for-responses"><%= post.requests_for_responses %></p>
				<p class="post-additional-resources"><%= post.additional_resources %></p>
			<div class="post-engagement-links">
				<% if current_user != post.writer %>
					<a href="/posts/<%= post.id %>/responses/new">Write Response</a>
				<% elsif current_user == post.writer && post.published == false%>
					<a href="/posts/<%post.id%>/edit">Edit Post</a>
				<% end %>
			</div>
		</div>	
	<% end %>
<% else %>
	<p>There are currently no active posts.  Maybe you should write one!</p>
<%end%>
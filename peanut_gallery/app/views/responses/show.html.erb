<div class="response">

	<h6><%= @response.title %></h6>
	<p><%= @response.content %></p>
	<p class="response_author"><%=@response.writer.username %></p>
	<p class="response_date"><%=@response.created_at %></p>

	<div class="response_votes">
		<%= button_to "Upvote", posts_responses_upvote_path(@response.post, @response) %>
		<%= button_to "Downvote", posts_responses_downvote_path(@response.post, @response) %>
	</div>

	<div class="response_flag">
		<%= button_to "Flag", posts_responses_flag_path(@response.post, @response) %>
	</div>

	<div class="approve-buttons">
		<% if !@response.approved && current_user == @response.post.writer %>
			<%= button_to "Approve Response", posts_responses_approve_path(@response.post.id, @response.id) %>
		<% elsif @response.approved && current_user == @response.post.writer %>
			<%= button_to "Unapprove Response", posts_responses_approve_path(@response.post.id, @response.id) %>
		<% end %>
	</div>

	<% if current_user == @response.writer %>
		<div class="edit_links">
			<%= button_to "Edit Response", {controller: "responses", action: "edit", id: @response}, method: :get%>
			<%= button_to "Delete Response", { action: "destroy", id: @response },
                                method: :delete, data: { confirm: "Are you sure?" } %>
		</div>
	<%end%>

</div>

<div class="response">
	<h6><%= @response.title %></h6>
	<p><%= @response.content %></p>
	<p class="response_author"><%=@response.writer.username %></p>
	<p class="response_date"><%=@response.created_at %></p>

	<% if current_user == @response.writer %>
		<div class="edit_links">
			<%= link_to "Edit Response", controller: "responses", action: "edit", id: @response%>
			<%= button_to "Delete Response", { action: "destroy", id: @response.id },
                                method: :delete, data: { confirm: "Are you sure?" } %>
		</div>
	<%end%>

</div>
